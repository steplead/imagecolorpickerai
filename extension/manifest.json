{
    "manifest_version": 3,
    "name": "Image Color Picker AI",
    "short_name": "ColorPicker",
    "version": "1.0.1",
    "description": "Pick any color from any website and see its history, TCM palette, and accessibility score on ImageColorPickerAI.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo_v2.png",
            "48": "logo_v2.png",
            "128": "logo_v2.png"
        }
    },
    "icons": {
        "16": "logo_v2.png",
        "48": "logo_v2.png",
        "128": "logo_v2.png"
    }
}