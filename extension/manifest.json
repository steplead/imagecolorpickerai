{
    "manifest_version": 3,
    "name": "Image Color Picker AI - Pro EyeDropper",
    "version": "1.0.0",
    "description": "Pick any color from any website and see its history, TCM palette, and accessibility score on ImageColorPickerAI.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}